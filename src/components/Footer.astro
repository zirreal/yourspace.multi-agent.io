---
import {withBase} from '../utils/withBase';

interface FooterProps {
  companyName: string;
  year: number;
}

const props: FooterProps = {
  companyName: "Мультиагентные системы",
  year: new Date().getFullYear(),
};
---


<footer class="footer">
  <div class="layout">
    <div class="copyright">© {props.companyName} {props.year}</div>
      <nav class="footer__nav">
        <ul class="footer__list">
          <li class="footer__item">
            <a class="underline" href={withBase('/about-us/')} aria-label="Узнать больше о нас">О нас</a>
          </li>
          <li class="footer__item">
            <a class="underline" href={withBase('/#features')} aria-label="Перейти к разделу 'Возможности'">Возможности</a>
          </li>
          <li class="footer__item">
            <a class="underline" href={withBase('/#cases')} aria-label="Перейти к разделу 'Кейсы'">Кейсы</a>
          </li>
          <li class="footer__item">
            <a class="underline" href={withBase('/#steps')} aria-label="Перейти к разделу 'Этапы Работы'">Этапы Работы</a>
          </li>
        </ul>
        <ul class="footer__list">
          <li class="footer__item">
            <a class="underline" href={withBase('/terms/')} aria-label="Узнать больше об условиях использования">Условия использования</a>
          </li>
          <li class="footer__item">
            <a class="underline" href={withBase('/offer/')} aria-label="Узнать больше о публичной оферте">Публичная оферта</a>
          </li>
          <li class="footer__item">
            <a class="underline" href={withBase('/privacy-policy/')} aria-label="Узнать больше о политике конфиденциальности">Политика конфиденциальности</a>
          </li>
          <li class="footer__item">
            <a class="underline" href={withBase('/cookies/')} aria-label="Узнать больше о политике использования cookies">Политика использования cookies</a>
          </li>
        </ul>
        <ul class="footer__list">
          <li class="footer__item">
            <a class="underline" href="https://shop.multi-agent.io/" aria-label="Посетить наш магазин умных устройств" target="_blank">Магазин</a>
          </li>
          <li class="footer__item">
            <a class="underline" href={withBase('/about-us/#contacts')} aria-label="Свяжитесь с нами">Контакты</a>
          </li>
          <li class="footer__item footer__item--socials">
            <a href="https://t.me/YourSpaceSpb" class="social__link social__link--tg" aria-label="Свяжитесь с нами в телеграмме" target="_blank">
